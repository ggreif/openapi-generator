{
  "openapi": "3.0.0",
  "info": {
    "title": "JSONPlaceholder Posts API",
    "version": "1.0.0",
    "description": "Simple test API for Motoko client generation"
  },
  "servers": [
    {
      "url": "https://jsonplaceholder.typicode.com"
    }
  ],
  "paths": {
    "/posts": {
      "get": {
        "operationId": "getPosts",
        "summary": "Get all posts",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {
        "operationId": "getPostById",
        "summary": "Get post by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          },
          "404": {
            "description": "Post not found"
          },
          "500": {
            "description": "Internal Server Error"
          },
          "503": {
            "description": "Service Unavailable"
          }
        }
      }
    },
    "/posts/by-status": {
      "get": {
        "operationId": "getPostsByStatus",
        "summary": "Get posts filtered by status (enum parameter test)",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/PostStatus"
            },
            "description": "Filter posts by publication status"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/nonexistent": {
      "get": {
        "operationId": "getNonexistent",
        "summary": "Get nonexistent resource (for testing error handling)",
        "responses": {
          "200": {
            "description": "Success (should never happen)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/status/500": {
      "get": {
        "operationId": "getStatus500",
        "summary": "Get HTTP 500 error from httpbin.org (for testing error handling)",
        "responses": {
          "200": {
            "description": "Success (should never happen)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/status/503": {
      "get": {
        "operationId": "getStatus503",
        "summary": "Get HTTP 503 error from httpbin.org (for testing error handling)",
        "responses": {
          "200": {
            "description": "Success (should never happen)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "503": {
            "description": "Service Unavailable"
          }
        }
      }
    },
    "/json": {
      "get": {
        "operationId": "getJson",
        "summary": "Get JSON sample from httpbin.org (control test for 200 success)",
        "responses": {
          "200": {
            "description": "Successful response with JSON content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "slideshow": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/anything": {
      "get": {
        "operationId": "getAnythingWithStatus",
        "summary": "Test enum parameter serialization using httpbin.org /anything endpoint",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/PostStatus"
            },
            "description": "Status enum to test serialization"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response echoing request details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "args": {
                      "type": "object",
                      "description": "Query parameters echoed back"
                    },
                    "url": {
                      "type": "string",
                      "description": "Request URL"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/anything/geojson": {
      "get": {
        "operationId": "getGeoJsonPolygon",
        "summary": "Get a GeoJSON Polygon feature (tests nested arrays - uses httpbin /anything with transform)",
        "responses": {
          "200": {
            "description": "Successful response with GeoJSON Feature containing Polygon",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeoJsonFeature"
                }
              }
            }
          }
        }
      }
    },
    "/anything/enum-status": {
      "get": {
        "operationId": "getEnumStatus",
        "summary": "Get enum status (tests enum with special characters - uses httpbin /anything with transform)",
        "responses": {
          "200": {
            "description": "Successful response with object containing PostStatus enum",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["status"],
                  "properties": {
                    "status": {
                      "$ref": "#/components/schemas/PostStatus"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Post": {
        "type": "object",
        "required": [
          "id",
          "userId",
          "title",
          "body"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "userId": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "body": {
            "type": "string"
          },
          "status": {
            "$ref": "#/components/schemas/PostStatus"
          }
        }
      },
      "PostStatus": {
        "type": "string",
        "description": "Post publication status (with special characters to test enum mapping)",
        "enum": ["in-progress", "published!", "archived-2023"]
      },
      "GeoJsonFeature": {
        "type": "object",
        "required": [
          "type",
          "geometry",
          "properties"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "geometry": {
            "$ref": "#/components/schemas/GeoJsonPolygon"
          },
          "properties": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            }
          }
        }
      },
      "GeoJsonPolygon": {
        "type": "object",
        "required": [
          "type",
          "coordinates"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Polygon"
            ]
          },
          "coordinates": {
            "type": "array",
            "description": "Array of linear rings (first is exterior, rest are holes). Triple-nested: [[[lon, lat], [lon, lat], ...]]",
            "items": {
              "type": "array",
              "description": "Linear ring: array of positions",
              "items": {
                "type": "array",
                "description": "Position: [longitude, latitude] pair",
                "items": {
                  "type": "number"
                },
                "minItems": 2,
                "maxItems": 3
              },
              "minItems": 4
            },
            "minItems": 1
          }
        }
      }
    }
  }
}
